<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CulturalActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="303dp"
        android:layout_height="44dp"
        android:layout_marginTop="40dp"
        android:text="Cultural"
        android:textColor="#000000"
        android:textSize="40sp"
        android:textStyle="bold"
        app:fontFamily="sans-serif-condensed-light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.251"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Cultural" />


    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="65dp"
        android:layout_height="55dp"
        android:background="#00FFFFFF"
        android:scaleType="centerCrop"
        android:src="@drawable/menu"
        app:layout_constraintBottom_toTopOf="@+id/divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="274dp"
        android:layout_height="23dp"
        android:layout_marginTop="12dp"
        android:entries="@array/Tourist"
        android:spinnerMode="dropdown"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.197"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="282dp"
        android:layout_height="32dp"
        android:layout_marginTop="44dp"
        android:text="What are you interested in"
        android:textColor="#CD000000"
        android:textSize="18sp"
        android:typeface="sans"
        app:fontFamily="sans-serif-condensed-light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.124"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner" />

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView3"
        android:layout_width="417dp"
        android:layout_height="194dp"
        android:layout_marginTop="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="149dp"
                android:layout_height="match_parent"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <Button
                    android:id="@+id/buttonBassin"
                    android:layout_width="110dp"
                    android:layout_height="140dp"
                    android:layout_weight="1"
                    android:background="@drawable/grand" />

                <TextView
                    android:id="@+id/textView2.3"
                    android:layout_width="114dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/buttonBassin"
                    android:layout_marginTop="0dp"
                    android:gravity="center_horizontal"
                    android:text="Grand Bassin"
                    android:textSize="20sp"
                    tools:layout_editor_absoluteX="6dp"
                    tools:layout_editor_absoluteY="640dp" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="149dp"
                android:layout_height="match_parent"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <Button
                    android:id="@+id/buttonSucre"
                    android:layout_width="110dp"
                    android:layout_height="140dp"
                    android:layout_weight="1"
                    android:background="@drawable/sucre" />

                <TextView
                    android:id="@+id/textView2.2"
                    android:layout_width="114dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/buttonSucre"
                    android:layout_marginTop="0dp"
                    android:gravity="center_horizontal"
                    android:text="L'Aventure du Sucre"
                    android:textSize="20sp"
                    tools:layout_editor_absoluteX="6dp"
                    tools:layout_editor_absoluteY="640dp" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="149dp"
                android:layout_height="match_parent"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <Button
                    android:id="@+id/buttonGhat"
                    android:layout_width="110dp"
                    android:layout_height="140dp"
                    android:layout_weight="1"
                    android:background="@drawable/ghat" />

                <TextView
                    android:id="@+id/textView2.1"
                    android:layout_width="114dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/buttonGhat"
                    android:layout_marginTop="0dp"
                    android:gravity="center_horizontal"
                    android:text="Aapravasi Ghat"
                    android:textSize="20sp"
                    tools:layout_editor_absoluteX="6dp"
                    tools:layout_editor_absoluteY="640dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="149dp"
                android:layout_height="match_parent"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <Button
                    android:id="@+id/buttonPenny"
                    android:layout_width="110dp"
                    android:layout_height="140dp"
                    android:layout_weight="1"
                    android:background="@drawable/penny" />

                <TextView
                    android:id="@+id/textView2.4"
                    android:layout_width="114dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/buttonPenny"
                    android:layout_marginTop="0dp"
                    android:gravity="center_horizontal"
                    android:text="Blue Penny Museum"
                    android:textSize="20sp"
                    tools:layout_editor_absoluteX="6dp"
                    tools:layout_editor_absoluteY="640dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="149dp"
                android:layout_height="match_parent"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <Button
                    android:id="@+id/buttonCitadel"
                    android:layout_width="110dp"
                    android:layout_height="140dp"
                    android:layout_weight="1"
                    android:background="@drawable/citadel" />

                <TextView
                    android:id="@+id/textView2.5"
                    android:layout_width="114dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/buttonCitadel"
                    android:layout_marginTop="0dp"
                    android:gravity="center_horizontal"
                    android:text="Citadel"
                    android:textSize="20sp"
                    tools:layout_editor_absoluteX="6dp"
                    tools:layout_editor_absoluteY="640dp" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="149dp"
                android:layout_height="match_parent"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <Button
                    android:id="@+id/buttonChateau"
                    android:layout_width="110dp"
                    android:layout_height="140dp"
                    android:layout_weight="1"
                    android:background="@drawable/chateau" />

                <TextView
                    android:id="@+id/textView2.7"
                    android:layout_width="114dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/buttonChateau"
                    android:layout_marginTop="0dp"
                    android:gravity="center_horizontal"
                    android:text="Chateau De Labourdonnais"
                    android:textSize="20sp"
                    tools:layout_editor_absoluteX="6dp"
                    tools:layout_editor_absoluteY="640dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="149dp"
                android:layout_height="match_parent"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <Button
                    android:id="@+id/buttonChinatown"
                    android:layout_width="110dp"
                    android:layout_height="140dp"
                    android:layout_weight="1"
                    android:background="@drawable/chinatown" />

                <TextView
                    android:id="@+id/textView2.8"
                    android:layout_width="114dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/buttonChinatown"
                    android:layout_marginTop="0dp"
                    android:gravity="center_horizontal"
                    android:text="Chinatown"
                    android:textSize="20sp"
                    tools:layout_editor_absoluteX="6dp"
                    tools:layout_editor_absoluteY="640dp" />

            </RelativeLayout>



        </LinearLayout>


    </HorizontalScrollView>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="282dp"
        android:layout_height="32dp"
        android:layout_marginTop="8dp"
        android:text="Our Top Picks"
        android:textColor="#CD000000"
        android:textSize="18sp"
        android:typeface="sans"
        app:fontFamily="sans-serif-condensed-light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.124"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView3" />

    <HorizontalScrollView
        android:layout_width="417dp"
        android:layout_height="194dp"
        android:layout_marginTop="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="149dp"
                android:layout_height="match_parent"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <Button
                    android:id="@+id/buttonCitadel2"
                    android:layout_width="110dp"
                    android:layout_height="140dp"
                    android:layout_weight="1"
                    android:background="@drawable/citadel" />

                <TextView
                    android:id="@+id/textView2.25"
                    android:layout_width="114dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/buttonCitadel2"
                    android:layout_marginTop="0dp"
                    android:gravity="center_horizontal"
                    android:text="Citadel"
                    android:textSize="20sp"
                    tools:layout_editor_absoluteX="6dp"
                    tools:layout_editor_absoluteY="640dp" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="149dp"
                android:layout_height="match_parent"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <Button
                    android:id="@+id/buttonChateau2"
                    android:layout_width="110dp"
                    android:layout_height="140dp"
                    android:layout_weight="1"
                    android:background="@drawable/chateau" />

                <TextView
                    android:id="@+id/textView2.72"
                    android:layout_width="114dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/buttonChateau2"
                    android:layout_marginTop="0dp"
                    android:gravity="center_horizontal"
                    android:text="Chateau De Labourdonnais"
                    android:textSize="20sp"
                    tools:layout_editor_absoluteX="6dp"
                    tools:layout_editor_absoluteY="640dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="149dp"
                android:layout_height="match_parent"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <Button
                    android:id="@+id/buttonChinatown2"
                    android:layout_width="110dp"
                    android:layout_height="140dp"
                    android:layout_weight="1"
                    android:background="@drawable/chinatown" />

                <TextView
                    android:id="@+id/textView2.82"
                    android:layout_width="114dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/buttonChinatown2"
                    android:layout_marginTop="0dp"
                    android:gravity="center_horizontal"
                    android:text="Chinatown"
                    android:textSize="20sp"
                    tools:layout_editor_absoluteX="6dp"
                    tools:layout_editor_absoluteY="640dp" />

            </RelativeLayout>

        </LinearLayout>
    </HorizontalScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>